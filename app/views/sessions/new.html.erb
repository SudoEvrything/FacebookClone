<% provide(:title, "Log In") %>
<h1>Log In</h1>

<div class="row">
	<%= form_for(:session, url: login_path) do |f| %>
		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.submit "Log In" %>
	<% end %>
	<p>New user? <%= link_to "Sign Up Now!", signup_path %></p>
</div>